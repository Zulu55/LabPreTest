@page "/orders/edit/{Id:int}"

<h3>Editar Orden</h3>

@if (order is null)
{
    <Loading />
}
else
{
    <FormForOrder @ref="orderForm"
                  Label="Orden:" 
                  Model="order" 
                  OnValidSubmit="EditAsync" 
                  ReturnAction="Return" />
}
<img src="~/icon-192.png" />